{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json",
    "sourceType": "module",
    "ecmaVersion": 2022
  },
  "env": {
    "node": true,
    "browser": true,
    "es2022": true
  },
  "plugins": [
    "@typescript-eslint",
    "security",
    "import"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:security/recommended",
    "plugin:import/recommended",
    "plugin:import/typescript"
  ],
  "settings": {
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true,
        "project": "./tsconfig.json"
      }
    }
  },
  "rules": {
    // SEGURANÇA - APENAS AS ESSENCIAIS
    "security/detect-eval-with-expression": "error",
    "security/detect-new-buffer": "error",
    "security/detect-child-process": "error",
    
    // TYPESCRIPT - CONFIGURAÇÃO SIMPLES E PRAGMÁTICA
    "@typescript-eslint/no-explicit-any": "off", // Desabilitado: necessário para plugins Obsidian
    "@typescript-eslint/no-unused-vars": ["error", { 
      "argsIgnorePattern": "^_",
      "varsIgnorePattern": "^_"
    }],
    "@typescript-eslint/no-floating-promises": "off", // Desabilitado: muito restritivo
    "@typescript-eslint/require-await": "off", // Desabilitado: muito restritivo
    "@typescript-eslint/no-this-alias": "off", // Desabilitado: comum em callbacks
    "@typescript-eslint/ban-types": "off", // Desabilitado: muito restritivo
    "security/detect-object-injection": "off", // Desabilitado: muito restritivo para plugins
    
    // JAVASCRIPT - BOAS PRÁTICAS ESSENCIAIS
    "no-eval": "error",
    "no-implied-eval": "error", 
    "no-new-func": "error",
    "no-var": "error",
    "prefer-const": "error",
    "no-console": "off", // Essencial para debug em plugins
    "no-debugger": "error",
    "no-alert": "error",
    "no-unreachable": "error",
    "no-unused-expressions": "error",
    
    // COMPLEXIDADE - VALORES RAZOÁVEIS
    "complexity": ["warn", 20], // Mais relaxado para plugins
    "max-depth": ["warn", 6], // Mais relaxado para plugins
    "max-nested-callbacks": ["warn", 5], // Mais relaxado
    "max-params": ["warn", 6], // Mais relaxado
    
    // IMPORTS - APENAS O ESSENCIAL
    "import/no-unresolved": "error",
    "import/no-self-import": "error",
    "import/no-absolute-path": "error",
    
    // FORMATAÇÃO - CONSISTÊNCIA
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "comma-dangle": ["error", "always-multiline"],
    "object-curly-spacing": ["error", "always"],
    "array-bracket-spacing": ["error", "never"]
  },
  "overrides": [
    {
      "files": ["**/*.test.ts", "**/*.spec.ts"],
      "rules": {
        "@typescript-eslint/no-explicit-any": "off",
        "no-console": "off",
        "max-nested-callbacks": "off"
      }
    }
  ],
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    "build/",
    "tests/",
    "*.js",
    "*.d.ts"
  ]
}